<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reachingimmortality.com.curriculum.ProfileMainFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:divider="@drawable/dividier_empty"
        android:showDividers="middle">

        <include layout="@layout/cardview_profile_about"/>

        <include layout="@layout/cardview_profile_location"/>

        <include layout="@layout/cardview_web_profiles"/>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>

