<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Card_View"
    style="@style/CardViewStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/layTitle"
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <RelativeLayout
                android:id="@+id/layIcon"
                android:layout_width="72dp"
                android:layout_height="72dp">
                <ImageView
                    android:id="@+id/circleIconMail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:alpha="0.54"
                    android:src="@drawable/icon_circle"/>

                <ImageView
                    android:id="@+id/proCardIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/ic_link_white"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/layIcon"
                android:layout_toEndOf="@+id/layIcon"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_alignWithParentIfMissing="true">

                <TextView
                    android:id="@+id/proCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#87000000"
                    android:textSize="16sp"
                    android:text="@string/pro_name"
                    android:layout_centerInParent="true"
                    android:typeface="sans" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layTitle"
            android:layout_marginBottom="6dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:background="#57000000"/>

            <TextView
                android:id="@+id/proCard1stTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#87000000"
                android:textSize="16sp"
                android:hint="@string/pro_name"/>

            <TextView
                android:id="@+id/proCard1stSubtitle"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#57000000"
                android:textSize="14sp"
                android:hint="@string/pro_name"/>


            <TextView
                android:id="@+id/proCard2ndTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#87000000"
                android:textSize="16sp"
                android:hint="@string/pro_name"/>

            <TextView
                android:id="@+id/proCard2ndSubtitle"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#57000000"
                android:textSize="14sp"
                android:hint="@string/pro_name"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
