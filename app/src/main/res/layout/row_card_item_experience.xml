<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Card_View"
    style="@style/CardViewStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="8dp"
    android:clickable="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/irExpPosition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_950"
            android:textSize="20sp"
            android:text="Dummy"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <TextView
            android:id="@+id/irExpEmployer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="15sp"
            android:text="provideeeer"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/irExpStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="15sp"
                android:text="12.5.2111"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="15sp"
                android:text=" - "
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/irExpStartDate" />
            <TextView
                android:id="@+id/irExpEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_blue_grey_800"
                android:textSize="15sp"
                android:text="12.5.2111"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView10" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
